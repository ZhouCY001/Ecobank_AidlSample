<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left|top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scroller"
        android:scrollbarFadeDuration="600000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_vertical_margin" >


            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_vertical_margin" >

                <Button
                    android:id="@+id/bind"
                    style="@style/btn_menu_style"
                    android:text="bind" />

                <Button
                    android:id="@+id/unbind"
                    style="@style/btn_menu_style"
                    android:text="unbind" />

                <Button
                    android:id="@+id/setListener"
                    style="@style/btn_menu_style"
                    android:text="setListener" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2" >

                <Button
                    android:id="@+id/Login"
                    style="@style/btn_menu_style"
                    android:text="Login" />

                <Button
                    android:id="@+id/settle"
                    style="@style/btn_menu_style"
                    android:text="Settle" />

                <Button
                    android:id="@+id/Printlast"
                    style="@style/btn_menu_style"
                    android:text="Printlast" />



            </LinearLayout>


            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2" >


                <Button
                    android:id="@+id/Sale"
                    style="@style/btn_menu_style"
                    android:text="Sale" />

                <Button
                    android:id="@+id/VoidSale"
                    style="@style/btn_menu_style"
                    android:text="VoidSale" />

                <Button
                    android:id="@+id/Refund"
                    style="@style/btn_menu_style"
                    android:text="Refund" />

            </LinearLayout>


<!--            <LinearLayout-->
<!--                android:id="@+id/line5"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:gravity="right"-->
<!--                android:layout_below="@id/line2" >-->
<!--                <Button-->
<!--                    android:id="@+id/PreAuth"-->
<!--                    style="@style/btn_menu_style"-->
<!--                    android:text="PreAuth" />-->

<!--                <Button-->
<!--                    android:id="@+id/AuthCancel"-->
<!--                    style="@style/btn_menu_style"-->
<!--                    android:text="AuthCancel" />-->

<!--                <Button-->
<!--                    android:id="@+id/AuthComp"-->
<!--                    style="@style/btn_menu_style"-->
<!--                    android:text="AuthComp" />-->
<!--            </LinearLayout>-->



        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scroller"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/line10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/line12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="method：" />

            <TextView
                android:id="@+id/method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line12"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="callback：" />

            <TextView
                android:id="@+id/callback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line13"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="param：" />

            <TextView
                android:id="@+id/param"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line14"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="result：" />

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>